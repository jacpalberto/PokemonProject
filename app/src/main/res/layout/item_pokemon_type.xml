    android:id="@+id/pokemonItemLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/circled_layout">

    <TextView
        android:id="@+id/pokemonTypeTextView"
        android:layout_width="wrap_content"
